---
import Meta from "../components/Meta.astro";

interface Props {
  frontmatter: {
    title: string;
    description: string;
  };
}

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <Meta {...frontmatter} />
  </head>
  <body class="h-screen to-bg-slate-600">
    <div
      class="bg-neutral-100 dark:bg-neutral-950 -z-10 fixed top-0 h-full w-full"
    >
    </div>
    <article
      class="mx-auto p-4 prose dark:prose-invert md:prose-lg lg:prose-xl prose-neutral"
    >
      <slot />
    </article>
  </body>
</html>
