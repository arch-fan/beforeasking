---
import Meta from "../components/Meta.astro";
import Github from "../icons/github.svg";

interface Props {
  frontmatter: {
    title: string;
    description: string;
  };
}

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <script src="../scripts/copy-tool.ts"></script>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <Meta {...frontmatter} />
  </head>
  <body class="bg-neutral-100 dark:bg-neutral-950">
    <header class="w-full p-1 bg-white font-bold">
      <a
        class="hover:underline gap-1 mx-auto flex justify-center"
        href="https://github.com/arch-fan/beforeasking"
      >
        <Github size={24} />
        <span>Visita el repositorio en GitHub</span>
      </a>
    </header>
    <article
      class="mx-auto p-4 prose dark:prose-invert prose-h1:text-5xl lg:prose-h1:text-7xl prose-xl prose-neutral"
    >
      <slot />
    </article>
  </body>
</html>
